/* pages/search/search.wxss */

.main {
    height: 100vh;
    max-width: 100vw;
    max-height: 100vh;
    background-color: #1A1A1A;
    overflow-y: scroll;
    overflow-x: hidden;
}

.searchInput {
    display: flex;
    align-items: center;
    padding: 8px 0 8px 10px;
    position: relative;
    z-index: 2;
}

.search {
    flex: 10;
    font-size: 13px;
    background-color: #252525;
    padding: 6px 4px 6px 28px;
    color: #fff;
}

.placeholder {
    font-size: 13px;
    color: #B6B6B6;
}

.reset {
    flex: 2;
    color: rgba(255, 255, 255, .4);
    text-align: center;
}

.search-icon {
    position: absolute;
    left: 15px;
    top: 17px;
    font-size: 18px;
    color: #B6B6B6;
    z-index: 2;
}

.close-icon {
    position: absolute;
    right: 17%;
    top: 34%;
    font-size: 16px;
    color: #B6B6B6;
    z-index: 2;
}

.key-word {
    padding: 20px 12px;
    color: #fff;
}

.key-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #858585;
    font-size: 13px;
}

.clear-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2px;
}

.key-tag {
    display: flex;
    flex-wrap: wrap;
    padding: 20px 5px 10px;
    font-size: 12px;
}

.tag-item {
    background-color: #252525;
    padding: 6px;
    margin: 0 20px 15px 0;
    text-align: center;
}

.empty-tip {
    font-size: 12px;
    text-align: center;
    color: #858585;
    padding-top: 10px;
}

.van-dropdown-menu {
    border-bottom: 1px solid #313131;
}

.van-dropdown-menu__item {
    background-color: #1A1A1A;
}


.van-dropdown-menu__title::after {
    border-color: transparent transparent #B6B6B6 #B6B6B6 !important;
}

.van-ellipsis {
    color: #B6B6B6;
}

.select-item {
    color: #B6B6B6;
}

view.van-cell {
    background-color: #252525;
    color: #B6B6B6;
}

.more{
    color: #B6B6B6;
    text-align: center;
    font-size: 12px;
    padding: 10px;
}

.total {
    color: #B6B6B6;
    font-size: 12px;
    padding: 15px 0 15px 10px;
}

van-overlay .wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    z-index: 2;
}